<div class="ccs-stunt">
  <div><b>Target:</b> {{targetName}}</div>
  <div class="form-group">
    <label>Plausible?</label>
    <input type="checkbox" name="plausible" checked/>
  </div>

  <hr/>
  <div class="form-group">
    <label>Flavor</label>
    <select name="cool">
      <option value="none">Normal</option>
      <option value="light">Nice / repeating cool</option>
      <option value="full">So Cool</option>
    </select>
  </div>
  {{#if isPF2}}
    <div class="form-group" id="ccs-adv-row" style="display:none;">
      <label>
        <input type="checkbox" name="advNow"/>
        Use advantage instead of circumstance bonus (once per encounter)
      </label>
    </div>
  {{/if}}

  <hr/>
  <div class="form-group">
    <label><input type="checkbox" name="risk"/> Tactical Risk (Harder DC; success upgrades; failure setback)</label>
  </div>

  {{#if poolEnabled}}
  <hr/>
  <div class="form-group">
    <label><input type="checkbox" name="spendPool" {{#if poolRemaining}}{{else}}disabled{{/if}}/> Spend Cinematic Pool (PF2e: +1 degree; 5e: miss→hit, hit→crit)</label>
  </div>
  {{/if}}

  <div class="form-group">
    <label>Roll Source</label>
    <select name="rollKind">
      {{#each rollSources}}
        <option value="{{this.value}}">{{this.label}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label>Skill</label>
    <select name="rollKey">
      {{#each skills}}
        <option value="{{this.value}}">{{this.label}}</option>
      {{/each}}
    </select>
    <p class="hint">Used when Roll Source = Skill.</p>
  </div>

  <div class="form-group">
    <label>DC Override</label>
    <input type="number" name="dcOverride" placeholder="auto" />
  </div>

</div>