<div class="ccs-stunt">
  <div><b>Target:</b> {{targetName}}</div>
  <div class="form-group">
    <label>Plausible?</label>
    <input type="checkbox" name="plausible" checked/>
  </div>

  <hr/>
  <div class="form-group">
    <label>Flavor</label>
    <select name="cool">
      <option value="none">Normal</option>
      <option value="light">Nice / repeating cool</option>
      <option value="full">So Cool</option>
    </select>
  </div>
  {{#if isPF2}}
    <div class="form-group" id="ccs-adv-row" style="display:none;">
      <label title="Roll twice and keep the higher result for this stunt. Replaces the Flavor (+Cool) circumstance bonus for this roll. Once per encounter.">
        <input type="checkbox" name="advNow"/>
        Use Advantage
      </label>
    </div>
  {{/if}}

  <hr/>
  <div class="form-group">
    <label title="Apply a penalty to this stunt’s attack roll. Adds an effect on target (success) or self (failure)">
      <input type="checkbox" name="risk"/> Tactical Risk
    </label>
  </div>

  {{#if poolEnabled}}
  <hr/>
  <div class="form-group">
    <label><input type="checkbox" name="spendPool" {{#if poolRemaining}}{{else}}disabled{{/if}}/> Spend Cinematic Pool (PF2e: +1 degree; 5e: miss→hit, hit→crit)</label>
  </div>
  {{/if}}

  {{#unless hideRollSource}}
    <div class="form-group">
      <label>Roll Source</label>
      <select name="rollKind">
        {{#each rollSources}}
          <option value="{{this.value}}">{{this.label}}</option>
        {{/each}}
      </select>
    </div>
  {{else}}
    <input type="hidden" name="rollKind" value="{{effectiveRollKind}}"/>
  {{/unless}}

  <div class="form-group ccs-row-skill">
    <label>Skill</label>
    <select name="rollKey">
      {{#each skills}}
        <option value="{{this.value}}">{{this.label}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group ccs-row-attack" style="display:none">
    <label>Strike</label>
    <select name="strikeKey">
      {{#each strikes}}
        <option value="{{this.value}}">{{this.label}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label>Challenge</label>
    <select name="challengeAdj">
      <option value="4">Major weakness (+4)</option>
      <option value="2">Weakness (+2)</option>
      <option value="0" selected>Normal</option>
      <option value="-2">Resistance (−2)</option>
      <option value="-4">Major resistance (−4)</option>
    </select>
  </div>

</div>